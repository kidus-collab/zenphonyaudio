{
  "name": "zenphony-notifications",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "dev:desktop": "npm run dev --workspace=@zenphony/desktop",
    "dev:mobile": "npm run start --workspace=@zenphony/mobile",
    "dev:scheduler": "npm run dev --workspace=@zenphony/notification-scheduler",
    "build:desktop": "npm run build --workspace=@zenphony/desktop",
    "build:desktop:win": "npm run package:win --workspace=@zenphony/desktop",
    "build:desktop:mac": "npm run package:mac --workspace=@zenphony/desktop",
    "build:mobile:android": "npm run build:android --workspace=@zenphony/mobile",
    "build:mobile:ios": "npm run build:ios --workspace=@zenphony/mobile",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "install:all": "npm install"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
