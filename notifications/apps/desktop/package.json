{
  "name": "@zenphony/desktop",
  "version": "1.0.0",
  "description": "Zenphony Trader Desktop App with Session Notifications",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux",
    "clean": "rm -rf dist release"
  },
  "dependencies": {
    "@zenphony/shared": "*",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0",
    "node-schedule": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-schedule": "^2.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-vite": "^2.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.zenphony.trader",
    "productName": "Zenphony Trader",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "src/renderer/assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.finance"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Finance"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
